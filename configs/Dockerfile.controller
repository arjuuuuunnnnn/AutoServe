FROM python:3.13-slim

RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    python3-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

RUN mkdir -p /app/data /app/logs /nginx-config && \
    chmod 755 /app/logs /app/data

ENV PYTHONPATH=/app
ENV AUTOSERVE_DB_PATH=/app/data/autoscaler.db
ENV AUTOSERVE_NGINX_CONTAINER=autoserve-nginx

EXPOSE 8000 8001 8002 8003

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${AUTOSERVE_PORT:-8000}/health || exit 1

CMD ["python", "controller/main.py"]
